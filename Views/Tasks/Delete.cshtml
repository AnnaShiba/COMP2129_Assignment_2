@model ProjectTask
@{
    ViewData["Title"] = "Delete Project Task";
}

<h2>Confirm Task @Model.Title Deletion</h2>
<form asp-action="DeleteConfirmed" method="post">
    <input asp-for="ProjectTaskId" type="hidden" />
    <div class="form-group">
        <input type="submit" value="Yes Please Delete" class="btn btn-primary">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
