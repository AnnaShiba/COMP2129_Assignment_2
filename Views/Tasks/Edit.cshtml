@model ProjectTask
@{
    ViewData["Title"] = "Edit Project Task"; //sets the title of the view to "Edit Task"
}

<h2>Edit Project Task</h2>
<form asp-action="Edit" method="post">
    <input asp-for="ProjectTaskId" class="form-control" type="hidden" />
    <!-- Indicates that the form data will be submitted to the Create action of the current controller-->
    <div class="form-group">

        <label asp-for="Title" class="control-label"></label> <!-- asp for tag used to bind fields to correspond-->
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectId" class="control-label"></label>
        @Html.DropDownList("ProjectId", (IEnumerable<SelectListItem>)ViewBag.Projects, "Select a Project", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Save Task" class="btn btn-primary">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
