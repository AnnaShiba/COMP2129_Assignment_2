@model List<Flight>

@{
    ViewData["Title"] = "Flight Listing";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-3">@ViewData["Title"] <i class="fas fa-plane-departure"></i></h2>

    <div class="mb-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary me-2"><i class="fas fa-home"></i> Return to GBC Travel</a>
    </div>

    @if (Model.Any())
    {
        <p><strong>@Model.Count</strong> flights found!</p>
        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow">
                <thead class="thead-light">
                    <tr>
                        <th>Airline</th>
                        <th>Departure</th>
                        <th>Arrival</th>
                        <th>From</th>
                        <th>To</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var flight in Model)
                    {
                        <tr>
                            <td>@flight.Airline</td>
                            <td>@flight.DepartureFrom.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@flight.DepartureTo.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@flight.Source</td>
                            <td>@flight.Destination</td>
                            <td>$@flight.Price.ToString("N2")</td>
                            <td>
                                <a asp-controller="Bookings" asp-action="Create" asp-route-flightId="@flight.FlightId"
                                   class="btn btn-success btn-sm"><i class="fas fa-check-circle"></i> Select</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No flights found.
        </div>
    }
</div>