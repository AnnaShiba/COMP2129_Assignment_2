@model Project //specifies and empty Project
@{
    ViewData["Title"] = "Delete Project"; //sets the title of the view to "Create Project"
}

<h2>Confirm Project @Model.Name Deletion</h2>
<form asp-action="DeleteConfirmed" method="post">
    <input asp-for="ProjectId" class="form-control" type="hidden" />
    <div class="form-group">
        <input type="submit" value="Yes Please Delete" class="btn btn-primary">
    </div>
</form>
