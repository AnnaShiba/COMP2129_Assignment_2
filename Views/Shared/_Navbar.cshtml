@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-house"></i> GBC Travel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Bookings" asp-action="Index"><i class="fa fa-star"></i> Bookings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Hotels" asp-action="Index"><i class="fa fa-hotel"></i> Hotels</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Flights" asp-action="Index"><i class="fa fa-plane"></i> Flights</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="CarRentals" asp-action="Index"><i class="fa fa-car-side"></i> Cars</a>
                </li>

                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity"
                        asp-page="/Account/Manage/Index" title="Manage your profile"><i class="fa fa-circle-user"></i> Profile</a>
                    </li>
                    <li class="nav-item">
                        <form asp-aria="Identity" asp-area="Identity" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="nav-link btn btn-link text-dark" style="cursor:pointer"><i class="fa fa-sign-out-alt"></i> Logout</button>
                        </form>
                    </li>
                    @ViewBag.IsAdmin
                }
                else {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity"
                           asp-page="/Account/Register"><i class="fa fa-user-plus"></i> Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity"
                           asp-page="/Account/Login"><i class="fa fa-sign-in-alt"></i> Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>