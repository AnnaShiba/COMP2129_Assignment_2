@model List<Booking>

@{
    ViewData["Title"] = "All Bookings";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="mb-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2"><i class="fas fa-home"></i> Return to GBC Travel</a>
    </div>

    @if (Model.Any()) {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Starting Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model) {
                        <tr>
                            <td>@booking.BookingId</td>
                            <td>
                                <a asp-controller="Bookings" asp-action="Details" asp-route-id="@booking.BookingId" class="text-decoration-none">
                                    View Booking <i class="fas fa-eye"></i>
                                </a>
                            </td>
                            <td>@booking.StartDate.ToString("d")</td>
                            <td>                              
                                <a asp-controller="Bookings" asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else {
        <p class="alert alert-warning">No bookings found.</p>
    }
</div