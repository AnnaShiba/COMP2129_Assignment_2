@model Booking
@{
    ViewData["Title"] = "Modify a Booking";
}

<h2>Modify a Booking</h2>
<form asp-action="Edit" method="post">
    <input asp-for="BookingId" class="form-control" type="hidden" />
    <!-- Indicates that the form data will be submitted to the Create action of the current controller-->
    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HotelId" class="control-label"></label>
        @Html.DropDownList("HotelId", (IEnumerable<SelectListItem>)ViewBag.Hotels, "Select a Hotel", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Save Booking" class="btn btn-primary">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
