@model Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Booking #@Model.BookingId</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Booking Id</dt>
                <dd class="col-sm-9">@Model.BookingId</dd>

                <dt class="col-sm-3">From</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("MM/dd/yyyy")</dd>

                <dt class="col-sm-3">To</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("MM/dd/yyyy")</dd>

                @if (Model.Hotel != null)
                {
                    <dt class="col-sm-3">Hotel Name</dt>
                    <dd class="col-sm-9">
                        <a asp-controller="Hotels" asp-action="Details" asp-route-id="@Model.Hotel.HotelId">
                        @Model.Hotel.Name
                    </a>
                    </dd>
                }
                @if (Model.Flight != null)
                {
                    <dt class="col-sm-3">Airline</dt>
                     <dd class="col-sm-9"><a asp-controller="Flights" asp-action="Index" asp-route-id="@Model.Flight.FlightId">
                        @Model.Flight.Airline
                    </a>
                    </dd>
                }

                
            </dl>
            <div class="mt-4">
                <a asp-controller="Bookings" asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-primary me-2">Edit Booking</a>
                <a asp-controller="Bookings" asp-action="Index" class="btn btn-secondary">Back to Bookings List</a>
            </div>
        </div>
    </div>
</div>
