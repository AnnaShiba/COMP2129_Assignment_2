@model Booking

@{
    ViewData["Title"] = "Booking Details";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">Booking Details <i class="fas fa-receipt"></i></h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3"><i class="fas fa-hashtag"></i> Booking ID</dt>
                <dd class="col-sm-9">@Model.BookingId</dd>

                <dt class="col-sm-3"><i class="fas fa-calendar-alt"></i> From</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("MM/dd/yyyy")</dd>

                <dt class="col-sm-3"><i class="fas fa-calendar-check"></i> To</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("MM/dd/yyyy")</dd>

                @if (Model.Hotel != null)
                {
                    <dt class="col-sm-3"><i class="fas fa-hotel"></i> Hotel Name</dt>
                    <dd class="col-sm-9">
                        <a asp-controller="Hotels" asp-action="Details" asp-route-id="@Model.Hotel.HotelId" class="text-decoration-none">
                            @Model.Hotel.Name
                        </a>
                    </dd>
                }
                @if (Model.Flight != null)
                {
                    <dt class="col-sm-3"><i class="fas fa-plane-departure"></i> Airline</dt>
                    <dd class="col-sm-9">
                        <a asp-controller="Flights" asp-action="Index" asp-route-id="@Model.Flight.FlightId" class="text-decoration-none">
                            @Model.Flight.Airline
                        </a>
                    </dd>
                }

                @if (Model.CarRental != null)
                {
                    <dt class="col-sm-3"><i class="fas fa-car"></i> Car Rental</dt>
                    <dd class="col-sm-9">
                        <a asp-controller="CarRentals" asp-action="Details" asp-route-id="@Model.CarRental.Id" class="text-decoration-none">
                            @Model.CarRental.Make @Model.CarRental.Model (@Model.CarRental.Year)
                        </a>
                        <div><strong>Color:</strong> @Model.CarRental.Color</div>
                        <div><strong>Price Per Day:</strong> @Model.CarRental.PricePerDay.ToString("C")</div>
                        <div><strong>Available From:</strong> @Model.CarRental.AvailableFrom.ToString("MM/dd/yyyy")</div>
                        <div><strong>Available Until:</strong> @Model.CarRental.AvailableUntil.ToString("MM/dd/yyyy")</div>
                    </dd>
                }


            </dl>
            <div class="mt-4 d-flex justify-content-between">
                <a asp-controller="Bookings" asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-warning me-2"><i class="fas fa-edit"></i> Edit Booking</a>
                <a asp-controller="Bookings" asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Bookings List</a>
            </div>
        </div>
    </div>
</div>