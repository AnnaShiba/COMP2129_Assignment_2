@model Booking
@{
    ViewData["Title"] = "Make a Booking"; //sets the title of the view to "CHoHotelct Task"
}

<h2>Create New Booking</h2>
<form asp-action="Create" method="post">
    <!-- Indicates that the form data will be submitted to the Create action of the current controller-->
    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="HotelId" class="form-label">Hotel</label>
        <select asp-for="HotelId" class="form-select">
            <option value="">Select a hotel</option>
            @foreach (Hotel h in ViewBag.Hotels) {
                <option value="@h.HotelId">@h.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label class="control-label"></label>
        <input type="submit" value="Create" class="btn btn-primary">
    </div>
</form>
