@model IEnumerable<COMP2139_Assignment.Models.CarRental>

@{
    ViewData["Title"] = "Cars";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <form asp-controller="CarRentals" asp-action="Search" method="get" class="row g-3 mb-5 align-items-end">
        <div class="col-auto">
            <label for="departureDate" class="form-label">Pick-up Date</label>
            <input type="date" name="departureDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="col-auto">
            <label for="returnDate" class="form-label">Drop-off Date</label>
            <input type="date" name="returnDate" class="form-control" value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" required />
        </div>

        <div class="col-auto">
            <label for="minPrice" class="form-label">Min Price Per Day</label>
            <input type="number" name="minPrice" class="form-control" placeholder="Min" min="0" step="0.01" />
        </div>
        <div class="col-auto">
            <label for="maxPrice" class="form-label">Max Price Per Day</label>
            <input type="number" name="maxPrice" class="form-control" placeholder="Max" min="0" step="0.01" />
        </div>


        <div class="col-auto">
            <input type="submit" value="Search Cars" class="btn btn-primary">
        </div>
    </form>


    <div class="mb-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2"><i class="fas fa-home"></i> Return to GBC Travel</a>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Color</th>
                    <th>Price Per Day</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Make)</td>
                        <td>@Html.DisplayFor(modelItem => item.Model)</td>
                        <td>@Html.DisplayFor(modelItem => item.Year)</td>
                        <td>@Html.DisplayFor(modelItem => item.Color)</td>
                        <td>@Html.DisplayFor(modelItem => item.PricePerDay)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>