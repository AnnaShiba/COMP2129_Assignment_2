@model COMP2139_Assignment.Models.CarRental

@{
    ViewData["Title"] = "Car Rental Details";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@Model.Make @Model.Model (@Model.Year)</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Make</dt>
                <dd class="col-sm-8">@Model.Make</dd>

                <dt class="col-sm-4">Model</dt>
                <dd class="col-sm-8">@Model.Model</dd>

                <dt class="col-sm-4">Year</dt>
                <dd class="col-sm-8">@Model.Year</dd>

                <dt class="col-sm-4">Color</dt>
                <dd class="col-sm-8">@Model.Color</dd>

                <dt class="col-sm-4">Price Per Day</dt>
                <dd class="col-sm-8">$@Model.PricePerDay</dd>

                <dt class="col-sm-4">Availability</dt>
                <dd class="col-sm-8">@(Model.IsAvailable ? "Available" : "Not Available")</dd>


                <dt class="col-sm-4">Available From</dt>
                <dd class="col-sm-8">@Model.AvailableFrom.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4">Available Until</dt>
                <dd class="col-sm-8">@Model.AvailableUntil.ToString("yyyy-MM-dd")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to Car List</a>
    </div>
</div>