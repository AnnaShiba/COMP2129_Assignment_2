@model Hotel //specifies and empty Project
@{
    ViewData["Title"] = "Delete Hotel"; //sets the title of the view to "Create HoteHotel"
}
<h2>Confirm Hotel @Model.Name Deletion</h2>
<form asp-action="DeleteConfirmed" method="post">
    <input asp-for="HotelId" class="form-control" type="hidden" />
    <div class="form-group">
        <input type="submit" value="Yes Please Delete" class="btn btn-primary">
    </div>
</form>
