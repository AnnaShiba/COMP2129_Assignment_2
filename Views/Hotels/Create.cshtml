@model Hotel //specifies and empty Project
@{
    ViewData["Title"] = "Create Hotel"; //sets the title of the view
}
<h2>Create Hotel</h2>
<form asp-action="Create" method="post">
    <!-- Indicates that the form data will be submitted to the Create action of the current controller-->
    <div class="form-group">

        <label asp-for="Name" class="control-label"></label> <!-- asp for tag used to bind fields to correspond-->
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="Amentities" class="control-label"></label>
        <textarea asp-for="Amentities" class="form-control"></textarea>
        <span asp-validation-for="Amentities" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary">
    </div>
</form>
