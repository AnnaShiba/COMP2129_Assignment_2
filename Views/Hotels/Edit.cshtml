@model Hotel //specifies and empty Project
@{
    ViewData["Title"] = "Edit Hotel";
}
<h2>Edit Hotel</h2>
<form asp-action="Edit" method="post">
    <!-- Indicates that the form data will be submitted to the Create action of the current controller-->
    <div class="form-group">

        <label asp-for="Name" class="control-label"></label> <!-- asp for tag used to bind fields to correspond-->
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for="Amentities" class="control-label"></label>
        <textarea asp-for="Amentities" class="form-control"></textarea>
        <span asp-validation-for="Amentities" class="text-danger"></span>
    </div>
    <input asp-for="HotelId" class="form-control" type="hidden" />
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary">
    </div>
</form>
