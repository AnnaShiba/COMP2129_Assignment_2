@model List<Hotel>
@{
    ViewData["Title"] = "Hotel Listing";
}

<h2>Hotel Listing</h2>

@if(Model.Any()){
    <p>@Model.Count hotels found!</p>
    <table class="table">
        <thread>
            <tr>
                <td></td>
                <td>Name</td>
                <td>Price</td>
                <td></td>
                <td></td>
            </tr>
        </thread>
        
        @foreach(var hotel in Model) {
            <tbody>
                <tr>
                    <td>
                        <img src="@Href("/img/hotel-" + hotel.HotelId + ".jpg")" width="160" />
                    </td>
                    <td>
                        <a asp-controller="Hotels" asp-action="Details" asp-route-id="@hotel.HotelId">@hotel.Name</a>
                    </td>
                    <td>$@hotel.Price</td>
                    <td><a asp-controller="Bookings" asp-action="Index" asp-route-id="@hotel.HotelId" class="btn btn-primary">View Bookings</a></td>
                    <td><a asp-controller="Hotels" asp-action="Delete" asp-route-id="@hotel.HotelId" class="btn btn-primary">Delete</a></td>
                </tr>
            </tbody>
        }
        
    </table>
}else{
    <p>No hotels found</p>
}