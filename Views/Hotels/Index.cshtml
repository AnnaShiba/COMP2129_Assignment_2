@model List<Hotel>
@{
    ViewData["Title"] = "Hotel Listing";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-3">@ViewData["Title"]</h2>
    <div class="mb-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2"><i class="fas fa-home"></i> Return to GBC Travel</a>
        <a asp-controller="Flights" asp-action="Search" asp-route-destination="@ViewBag.Destination" asp-route-departureDate="@ViewBag.DepartureDate" asp-route-returnDate="@ViewBag.ReturnDate" class="btn btn-outline-primary"><i class="fas fa-plane"></i> Skip to Flights</a>
    </div>

    @if (Model.Any()) {
        <p class="mb-4">@Model.Count hotels found!</p>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var hotel in Model) {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@Href($"/img/hotel-{hotel.HotelId}.jpg")" class="card-img-top" alt="Hotel Image" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@hotel.Name</h5>
                            <p class="card-text"><small class="text-muted">@hotel.Location</small></p>
                            <p class="card-text">@hotel.Amentities</p>
                            <p class="card-text">Reviews: @hotel.Reviews</p>
                            <p class="card-text">Price: $@hotel.Price per night</p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-controller="Hotels" asp-action="Details" asp-route-id="@hotel.HotelId" class="btn btn-primary btn-sm">View Details</a>
                            <a asp-controller="Flights" asp-action="Search" asp-route-destination="@ViewBag.Destination" asp-route-departureDate="@ViewBag.DepartureDate" asp-route-returnDate="@ViewBag.ReturnDate" asp-route-hotelId="@hotel.HotelId" class="btn btn-success btn-sm">Book</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    } else {
        <div class="alert alert-warning" role="alert">
            No hotels found.
        </div>
    }
</div>